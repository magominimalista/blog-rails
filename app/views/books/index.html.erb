<div class="container mt-4">
  <h1 class="mb-3">Books</h1>
  <%= link_to 'New Book', new_book_path, class: 'btn btn-primary mb-3' %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Rating</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.rating %></td>
          <td><%= book.description %></td>
          <td><%= link_to 'Show', book, class: 'btn btn-info' %></td>
          <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
