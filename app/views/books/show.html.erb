<div class="container">  
  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <%= render @book %>

  <div class="mt-3 d-flex justify-content-between">
    <%= link_to "Edit this book", edit_book_path(@book), class: "btn btn-secondary" %>
    <%= link_to "Back to books", books_path, class: "btn btn-outline-secondary" %>
    <%= button_to "Destroy this book", @book, method: :delete, class: "btn btn-danger", 
                  data: { confirm: "Are you sure you want to delete this book?" } %>
  </div>
</div>

